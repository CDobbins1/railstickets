<p id="notice"><%= notice %></p>

<div class="p-1 mb-4 bg-light rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5"><%= @ticket.title %></h1>
    <p class="col-md-8 fs-5"><strong>Status:</strong> <%= @ticket.status %></p>
    <p><%= @ticket.description %></p>
    
    <br/>
    <%= link_to 'Edit', edit_ticket_path(@ticket), class: "btn btn-secondary" %>
    <%= link_to 'Destroy', @ticket, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    <%= link_to 'Back', tickets_path, class: "btn btn-dark" %>
  </div>
</div>
