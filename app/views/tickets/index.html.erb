<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= link_to ticket.title, ticket %></td>
        <td><%= truncate(ticket.description, length: 25) %></td>
        <td><%= ticket.status %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Ticket', new_ticket_path, class: "btn btn-success" %>
